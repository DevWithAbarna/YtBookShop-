@model YtBookStore.Models.Domain.Book
@{
}
<div class="contains pt-3">
	<div class="row">
		<div class=" col-md-8">
			<h3>Update Book</h3>
			<form asp-action="Update" method="post">
				<input type="hidden" class="form-control" asp-for="Id" />
				<div class="form-group">
@* 					@Html.HiddenFor(m => m.Id)
 *@					<label asp-for="Title">BookName *</label>
					<input type="text" class="form-control" asp-for="Title" />
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="GnereId">Genre *</label>
					<select asp-for="GnereId" asp-items="Model.GenreList" class="form-control">
						<option value="">--select--</option>
					</select>
					<span asp-validation-for="GnereId" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="Isbn">Isbn *</label>
					<input type="text" class="form-control" asp-for="Isbn" />
					<span asp-validation-for="Isbn" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="TotalPages">Total Pages *</label>
					<input type="number" class="form-control" asp-for="TotalPages" />
					<span asp-validation-for="TotalPages" class="text-danger"></span>
				</div>


				<div class="form-group">
					<label asp-for="AuthorId">Author *</label>
					<select asp-for="AuthorId" asp-items="Model.AuthorList" class="form-control">
						<option value="">--select--</option>
					</select>
					<span asp-validation-for="AuthorId" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="AuthorId">Publisher *</label>
					<select asp-for="PublisherId" asp-items="Model.PublisherList" class="form-control">
						<option value="">--select--</option>
					</select>
					<span asp-validation-for="AuthorId" class="text-danger"></span>
				</div>

				@if (TempData["msg"] != null)
				{
					<div class="form-group">
						@TempData["msg"]
					</div>
				}
				<div class="form-group pt-3">
					<button type="submit" class="btn btn-dark"><i class="bi bi-save"></i>Save</button>
					<a href="/Book/GetAll" class="btn btn-primary"><i class="bi bi-list"></i>List</a>
				</div>
			</form>
		</div>
	</div>
</div>
